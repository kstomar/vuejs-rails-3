# Ignore Rails log files
/log/*
/tmp/*
/public/assets
/public/packs
/public/packs-test

# Ignore system files
.DS_Store
Thumbs.db

# Ignore node_modules (for frontend dependencies)
node_modules/

# Ignore Rails secrets and credentials (keep these files private)
config/credentials.yml.enc
config/master.key
config/*.key

# Ignore environment variable files
.env
.env.*.local

# Ignore temporary files created by editors
*.swp
*.swo

# Ignore Yarn lock file if you use npm
yarn-error.log

# Ignore the database files
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore webpack and pack related files
public/packs-test/
public/packs/
bin/yarn
bin/webpack

# Ignore byebug history
.byebug_history

# Ignore .idea for JetBrains IDEs
.idea/

# Ignore Rails server PID file
/tmp/pids/
/vendor/
